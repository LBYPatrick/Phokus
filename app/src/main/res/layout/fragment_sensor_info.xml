<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".SensorInfoFragment">

    <TextView
        style="@style/SensorHint"
        android:text="@string/hint_azimuth"
        android:id="@+id/hint_azimuth"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        style="@style/SensorHint"
        android:text="@string/hint_pitch"
        android:id="@+id/hint_pitch"
        app:layout_constraintRight_toRightOf="@id/hint_azimuth"
        app:layout_constraintTop_toBottomOf="@id/hint_azimuth"/>

    <TextView
        style="@style/SensorHint"
        android:id="@+id/hint_roll"
        android:text="@string/hint_roll"
        app:layout_constraintRight_toRightOf="@id/hint_pitch"
        app:layout_constraintTop_toBottomOf="@id/hint_pitch"/>

    <TextView
        style="@style/InfoData"
        android:id="@+id/data_azimuth"
        android:text="@string/data_tilt_perfect"
        app:layout_constraintLeft_toRightOf="@id/hint_azimuth"
        app:layout_constraintTop_toTopOf="@id/hint_azimuth"/>

    <TextView
        style="@style/InfoData"
        android:id="@+id/data_pitch"
        android:text="@string/data_tilt_perfect"
        app:layout_constraintLeft_toRightOf="@id/hint_pitch"
        app:layout_constraintTop_toTopOf="@id/hint_pitch"/>

    <TextView
        style="@style/InfoData"
        android:id="@+id/data_roll"
        android:text="@string/data_tilt_perfect"
        app:layout_constraintLeft_toRightOf="@id/hint_roll"
        app:layout_constraintTop_toTopOf="@id/hint_roll"/>

</androidx.constraintlayout.widget.ConstraintLayout>